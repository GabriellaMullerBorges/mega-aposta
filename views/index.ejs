<!DOCTYPE html>
<html>
  <head>
    <title>Mega sena</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <h1>Aposta IT Academy Edição X</h1>
    </header>

    <section>
      <h2>Selecione ou surpresa</h2>
      <% for(let i = 1; i <= 50; i++) { %>
        <button type="button" <%= !isLoggedIn ? 'disabled' : '' %>><%= i %></button>
      <% } %>
    </section>

    <aside>
      <h3>Minhas Apostas</h3>
      <% if (apostas && apostas.length > 0) { %>
        <% apostas.forEach(aposta => { %>
          <p>Aposta: <%= aposta.numeros %></p>
        <% }) %>
      <% } else { %>
        <form action="/registrar" method="POST">
          Nome: <input type="text" name="nome" required>
          CPF: <input type="text" name="cpf" required>
          <button type="submit">Registrar</button>
        </form>
      <% } %>      
    </aside>

    <footer>
      <p> Gabriella Müller Borges</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>

